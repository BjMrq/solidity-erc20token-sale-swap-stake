{
  "name": "openzeppelin-tokenisation",
  "version": "1.0.0",
  "description": "",
  "main": "truffle-config.js",
  "scripts": {
    "postinstall": "truffle compile && yarn generate-types",
    "generate-types": "typechain --target=truffle-v5 --out-dir ./contracts/types 'contracts/build/contracts/*.json'",
    "compile": "truffle compile",
    "migrate": "rimraf ./contracts/build/migrations && tsc -p ./tsconfig.migrate.json --outDir ./contracts/build/migrations && truffle migrate --reset",
    "new-contracts": "npm run compile && npm run migrate",
    "fresh": "npm run compile && generate-types && npm run migrate",
    "test": "rimraf ./contracts/build/tests && tsc -p ./tsconfig.test.json --outDir ./contracts/build/tests && truffle test ",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.4.0",
    "@metamask/detect-provider": "^1.2.0",
    "@openzeppelin/contracts": "^4.5.0",
    "@truffle/hdwallet-provider": "^2.0.3",
    "dotenv": "^16.0.0",
    "rimraf": "^3.0.2",
    "truffle": "5.5.0",
    "truffle-typings": "^1.0.8",
    "typechain": "^7.0.0"
  },
  "devDependencies": {
    "@typechain/truffle-v5": "^7.0.0",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.18",
    "@types/web3": "1.2.2",
    "typescript": "^4.5.5"
  },
  "author": "",
  "license": "ISC"
}